<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/NamaGame"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:hint="Nama Game"
            android:textColor="#0E0E0E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/GenreGame"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="48dp"
            android:layout_weight="1"
            android:hint="Genre Game"
            android:textColor="#0E0E0E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/platformGame"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="92dp"
            android:layout_weight="1"
            android:hint="Platform Game"
            android:textColor="#0E0E0E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tahunrilisGame"
            android:layout_width="116dp"
            android:layout_height="19dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:hint="Tahun Rilis Game"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hargaGame"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="208dp"
            android:layout_marginTop="48dp"
            android:layout_weight="1"
            android:hint="Harga Game"
            android:textColor="#0E0E0E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deskripsiGame"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="208dp"
            android:layout_marginTop="92dp"
            android:layout_weight="1"
            android:hint="Deskripsi Game"
            android:textColor="#0E0E0E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
